function draw_grid()
    for i = 0, sz.x_max * sz.y_max - 1 do
        spr(grid[i], i % sz.x_max * 8 + sz.x_buff, flr(i / sz.x_max) * 8 + sz.y_buff, 1, 1)
    end
end

function draw_ui()
    rect(8, 73, 119, 120, 4)
    rectfill(9, 74, 10, 75, rnd(3))
    rectfill(117, 74, 118, 75, rnd(3))
end

function structure_grid()
    for i = 0, sz.x_max * sz.y_max do
        grid[i] = rnd(5) + 1
    end
end

